<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= list_title %></h1>
</div>

<div class="box">
  <% items.forEach(item => { %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%= item._id %>"
        onChange="this.form.submit()"
      />
      <p><%= item.name %></p>
    </div>
    <input type="hidden" name="listname" value="<%=list_title%>" />
  </form>
  <% }) %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="NewItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button id="bla" type="submit" name="lists" value="<%= list_title %>">
      +
    </button>
  </form>
</div>

<%- include("footer") %>
